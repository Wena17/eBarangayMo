@model List<eBarangayMo.Models.Resident>
@{
    ViewBag.Title = "Residents";
}

@if (Model.Count > 0)
{
    <table class="table mb-5 bg-light">
        <tr>
            <th>Resident ID</th>
            <th>Name</th>
            <th>Birthdate</th>
            <th>Age</th>
            <th>Civil Status</th>
            <th>Vital Status</th>
            <th>Email</th>
            <th>Phone Number</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelitem => item.id) </td>
                <td>@Html.DisplayFor(modelitem => item.name)</td>
                <td>@Html.DisplayFor(modelitem => item.bDate)</td>
                <td>@Html.DisplayFor(modelitem => item.age)</td>
                <td>@Html.DisplayFor(modelitem => item.civilStat)</td>
                <td>@Html.DisplayFor(modelitem => item.vitalStat)</td>
                <td>@Html.DisplayFor(modelitem => item.email)</td>
                <td>@Html.DisplayFor(modelitem => item.phoneNo)</td>
            </tr>
        }
    </table>
    <p class="noprint"><a href="javascript:window.print()">Click to Print This Page</a></p>
}
else
{
    <h2 class="mb-5">No List of Resident Available</h2>
}

