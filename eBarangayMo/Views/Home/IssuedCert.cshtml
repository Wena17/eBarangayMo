
@{
    ViewBag.Title = "IssuedCert";
}

<form>
    
    @if (ViewBag.IssuedCertList != null)
    {
        <div class="form-group d-flex justify-content-center">
            <h3 class="font-weight-light my-2">Issued Certificate</h3>
        </div>
        <table class="table ">
            <thead>
                <tr>
                    <th>Certificate</th>
                    <th>Price</th>
                    <th>No. of Copies</th>
                    <th>Issued Date</th>
                    <th>Issued By</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in ViewBag.IssuedCertList)
                {
                    <tr>
                        <td>@d.certName</td>
                        <td>@d.price</td>
                        <td>@d.copies</td>
                        <td>@d.issuedDate</td>
                        <td>@d.officialName</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2 class="mb-5">No Documents Available</h2>
    }
</form>

