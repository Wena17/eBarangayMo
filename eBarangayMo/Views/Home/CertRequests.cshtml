@model List<eBarangayMo.Models.CertificateRequests>
@{
    ViewBag.Title = "CertRequests";
}

@if (Model.Count > 0)
{
    <table class="table mb-5">
        <tr>
            <th>Certificate Name</th>
            <th>Price</th>
            <th>Purpose</th>
            <th>No. of Copies</th>
            <th>Request Date</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelitem => item.name) </td>
                <td>@Html.DisplayFor(modelitem => item.price)</td>
                <td>@Html.DisplayFor(modelitem => item.purpose)</td>
                <td>@Html.DisplayFor(modelitem => item.copies)</td>
                <td>@Html.DisplayFor(modelitem => item.requestDate)</td>
            </tr>
        }
    </table>
}
else
{
    <h2 class="mb-5">No Transaction History Available</h2>
}

